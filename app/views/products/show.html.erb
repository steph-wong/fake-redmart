<p id="notice"><%= notice %></p>

<div class="row">
    <aside class="col-md-5">
        <section class="product_info">
            <p>
                <strong>Name:</strong>
                <%= @product.name %>
            </p>

            <p>
                <strong>Brand:</strong>
                <%= @product.brand %>
            </p>

            <p>
                <strong>Category:</strong>
                <%= @product.category %>
            </p>

            <p>
                <strong>Price:</strong>
                $<%= @product.price %>
            </p>

            <br>

            <%= link_to 'Edit Product Details', edit_product_path(@product) %> |
            <%= link_to 'Back', products_path %>
            
        </section>
    </aside>

    <div class="col-md-7">
        <p>
            <strong>Review/s:</strong>
            <% if @product.reviews.any? %>
            <ol class="reviews">
                <%= render @product.reviews %>
            </ol>
        <% else %>
            <p>Product has no reviews yet.</p>
            <% end %>
        </p>
    </div>

</div>
